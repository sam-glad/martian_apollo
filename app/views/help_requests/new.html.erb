<h2>New Help Request</h2>

<%= form_for [@help_request] do |f| %>

  <% if @help_request.errors.any? %>
    <p>There were errors with your submission:</p>
    <ul>
      <% @help_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :searched %>
    <%= f.text_field :searched %>
  </div>

  <div>
    <%= f.label :problem %>
    <%= f.text_area :problem %>
  </div>

  <%= f.submit %>

<% end %>
